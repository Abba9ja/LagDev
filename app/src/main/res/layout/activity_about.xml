<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.abba9ja.lagdev.About">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="153dp"
        android:layout_height="142dp"
        android:layout_gravity="top|center"
        android:paddingTop="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Develop by Abba9ja email:abba9ja@gmail.com" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="This is a Android app that retrieve a list of Java Developers in Lagos using the Github API,Displaying the list of the developers on a list."
            android:textColor="#669900"
            android:textSize="12sp" />


    </ScrollView>

    <Button
        android:id="@+id/btnViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="@android:color/transparent"
        android:text="Click me to view  Abba9ja GitHub Profile"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
